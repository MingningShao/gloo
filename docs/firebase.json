{ 
  "hosting": {
    "site": "gloo-docs", 
    "public": "public", 
    "ignore": [
      "firebase.json",
      "themes/**/*",
      "content/**/*",
      "**/.*",
      "**/node_modules/**",
      "resources/**/*",
      "examples/**/*"
    ],
    "rewrites": [      
      {
        "source": "/",
        "destination": "/gloo/latest/index.html"
      },
      {
        "source": "/gloo",
        "destination": "/gloo/latest/index.html"
      }
    ] 
  } 
}